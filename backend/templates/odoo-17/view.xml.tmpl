<odoo>
  <data>
    <!-- list view -->
    <record id="{model}_view_list" model="ir.ui.view">
      <field name="name">{model}.list</field>
      <field name="model">{model}</field>
      <field name="arch" type="xml">
        <list>
  {tree_fields}
        </list>
      </field>
    </record>

    <!-- form view -->
    <record id="{model}_view_form" model="ir.ui.view">
      <field name="name">{model}.form</field>
      <field name="model">{model}</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
  {form_fields}
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- action window -->
    <record id="action_ads_copy" model="ir.actions.act_window">
        <field name="name">Ads Copy</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vit.ads_copy</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Click to add a new Ads Copy
            </p><p>

            </p>
        </field>
    </record>

    <menuitem id="menu_ads_copy" name="Ads Copy" parent="{folder_name}_config_menu" 
      action="action_ads_copy" sequence="60"/>

  </data>
</odoo>
